@using Microsoft.AspNetCore.Identity
@using Pulse.EntityFramework.Models

@inject SignInManager<Account> SignInManager
@inject UserManager<Account> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a data-cy="account-greeting" id="manage" class="nav-link text-dark" asp-controller="Manage" asp-action="Manage" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-controller="Logout" asp-action="Logout">
            <button data-cy="logout-link" id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" id="register" asp-controller="Register" asp-action="Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-controller="Login" asp-action="Login">Login</a>
    </li>
}
</ul>
